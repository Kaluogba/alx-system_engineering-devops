# Check if running as root
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

# Define the host and IP mappings
HOSTS=(
    "127.0.0.2 localhost"
    "8.8.8.8 facebook.com"
)

# Append mappings to /etc/hosts
for host in "${HOSTS[@]}"; do
    echo "$host" >> /etc/hosts
done

echo "Hosts configuration completed."
